pipeline {
    agent any

    stages {
        stage('Executar playbook Ansible') {
            steps {
                withCredentials([
                    string(credentialsId: 'ssh_passphrase', variable: 'ANSIBLE_PASSPHRASE')
                ]) {
                    sh '''
                        eval $(ssh-agent -s)
                        echo "$ANSIBLE_PASSPHRASE" | ssh-add /var/ssh/key/id_rsa
                        ansible-playbook -i ansible/hosts ansible/installweb.yml
                    '''
                }
            }
        }
    }
}

